# ================================================================
# RUM Shop - Local Development Configuration
# ================================================================
# Copy this to .env and fill in your values for local development.
# All services run on localhost with the ports below.
# ================================================================

# -------------------------------------------
# AWS Region (used by local AWS SDK calls)
# -------------------------------------------
AWS_REGION=us-east-1

# -------------------------------------------
# Datadog - Agent (for backend APM + metrics)
# -------------------------------------------
DD_API_KEY=<YOUR_DATADOG_API_KEY>
DD_APP_KEY=<YOUR_DATADOG_APP_KEY>
DD_SITE=datadoghq.com
DD_ENV=local
DD_VERSION=1.0.0

# -------------------------------------------
# Datadog - RUM (for frontend browser monitoring)
# -------------------------------------------
DD_RUM_APPLICATION_ID=<YOUR_DD_RUM_APPLICATION_ID>
DD_RUM_CLIENT_TOKEN=<YOUR_DD_RUM_CLIENT_TOKEN>

# -------------------------------------------
# Service Ports (local)
# -------------------------------------------
ORDER_SERVICE_PORT=8080
CART_SERVICE_PORT=3001
AUTH_SERVICE_PORT=3002
PAYMENT_SERVICE_PORT=3003
SEARCH_SERVICE_PORT=3004
RECOMMENDATIONS_SERVICE_PORT=3005
NOTIFICATIONS_SERVICE_PORT=3006
FRONTEND_PORT=3000

# -------------------------------------------
# Service URLs (local - used by frontend)
# -------------------------------------------
REACT_APP_ORDER_API=http://localhost:8080
REACT_APP_CART_API=http://localhost:3001
REACT_APP_AUTH_API=http://localhost:3002
REACT_APP_PAYMENT_API=http://localhost:3003
REACT_APP_SEARCH_API=http://localhost:3004
REACT_APP_RECOMMENDATIONS_API=http://localhost:3005
REACT_APP_NOTIFICATIONS_API=http://localhost:3006

# -------------------------------------------
# Datadog RUM env vars (used by React build)
# -------------------------------------------
REACT_APP_DD_APPLICATION_ID=<YOUR_DD_RUM_APPLICATION_ID>
REACT_APP_DD_CLIENT_TOKEN=<YOUR_DD_RUM_CLIENT_TOKEN>
REACT_APP_DD_SITE=datadoghq.com
REACT_APP_DD_SERVICE=kelvo-ecomm
REACT_APP_DD_ENV=local
REACT_APP_DD_VERSION=1.0.0

# -------------------------------------------
# PostgreSQL (local Docker container)
# -------------------------------------------
POSTGRES_DB=rumshop
POSTGRES_USER=rumshop
POSTGRES_PASSWORD=rumshop

# -------------------------------------------
# Auth
# -------------------------------------------
JWT_SECRET=rum-shop-local-secret-key-2024
